@model Employee

<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white fw-semibold mb-0"> @Model.Name </h1>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class=" text-start col-6 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                    <div class="text-end col-6 pb-1">
                        <a asp-action="Slip" asp-route-id="@Model.ID" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Salary Slip</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge">@Model.Name</span>
                        </div>
                        <div class="row text-center">
                            <div class="p-1 col-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Email</div>
                            </div>
                            <div class="p-1 col-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Contact</div>
                            </div>
                            <div class="p-1 col-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Address</div>
                            </div>
                            <div class="p-1 col-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">BasicSalary</div>
                            </div>
                            <div class="p-1 col-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Overtime</div>
                            </div>
                            <div class="p-1 col-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">NetSalary</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-2 bg-white text-warning fw-bold">
                                <div>@Model.Email</div>
                            </div>
                            <div class="p-1 col-2 bg-white text-warning fw-bold">
                                <div>@Model.Contact</div>
                            </div>
                            <div class="p-1 col-2 bg-white text-warning fw-bold">
                                <div>@Model.Address</div>
                            </div>
                            <div class="p-1 col-2 bg-white text-warning fw-bold">
                                <div>@Model.BasicSalary</div>
                            </div>
                            <div class="p-1 col-2 bg-white text-warning fw-bold">
                                <div>@Model.OverTime</div>
                            </div>
                            <div class="p-1 col-2 bg-white text-warning fw-bold">
                                <div>@Model.NetSalary</div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>


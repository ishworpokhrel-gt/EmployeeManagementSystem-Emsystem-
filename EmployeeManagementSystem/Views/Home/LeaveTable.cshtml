@model List<LeaveRequest>

<table class="table table-striped table-bordered p-3">
    <div class="row m-3">
        <div class="col-6 m-2 p-2">
            <h1>
                Leave List
            </h1>
        </div>
        <div class="col-6 m-3 p-2">
            <a asp-action="Leave" asp-controller="Home"> <b>Request Leave</b></a>
        </div>

    </div>
    <div class="m-2">
        <thead>
            <tr>
                <th>
                    Applied By
                </th>
                <th>
                    Applied Date
                </th>
                <th>
                    leave From
                </th>
                <th>
                    Leave To Date
                </th>
                <th>
                    Final Decision
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>
                        @obj.AppliedBy
                    </td>
                    <td>
                        @obj.AppliedDate
                    </td>
                    <td>
                        @obj.leaveFrom
                    </td>
                    <td>
                        @obj.leaveToDate
                    </td>
                    <td>
                        @obj.FinalDecision
                    </td>
                </tr>
            }
        </tbody>

    </div>
</table>
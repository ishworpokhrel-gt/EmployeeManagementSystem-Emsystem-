@model List<Employee>

<table class="table table-striped table-bordered">
    <div class="row mt-3 mb-5">
        <div class="col-6 text-end">
            <h1>
                Employee Details
            </h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="bi bi-plus-circle-dotted"></i>Add Employee</a>
        </div>
    </div>
    <div>
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Contact
            </th>
            <th>
                Address
            </th>
            <th>
                salary
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td>
                        @obj.Name

                </td>
                <td>
                        @obj.Email
                </td>
                <td>
                        @obj.Contact
                </td>
                <td>
                        @obj.Address
                </td>
                <td>
                        @obj.Salary
                </td>
                <td class="btn btn-group-lg form-control" >
                    <a asp-action="Edit" asp-controller="Category" asp-route-ID="@obj.ID" class="btn btn-primary px-5"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-ID="@obj.ID" class="btn btn-danger px-5 "><i class="bi bi-trash3"></i>Delete</a>
                </td>

            </tr>
            }
    </tbody>
    </div>

</table>